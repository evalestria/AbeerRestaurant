@page
@model AbeerRestaurant.Pages.Menu.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>FoodItem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FoodItem.ID" />

            <div class="form-group">
                <label class="control-label">Current Image</label>
                <div>
                    <img src="@(string.IsNullOrEmpty(Model.FoodItem.ImageUrl) ? "/meals/default.png" : $"/meals/{Model.FoodItem.ImageUrl}")"
                         alt="Food Image" class="img-thumbnail" style="max-width: 200px;">
                </div>
            </div>

            <div class="form-group">
                <label asp-for="FoodItem.ImageUrl" class="control-label">Upload New Image</label>
                <input type="file" name="ImageFile" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="FoodItem.Item_name" class="control-label"></label>
                <input asp-for="FoodItem.Item_name" class="form-control" />
                <span asp-validation-for="FoodItem.Item_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FoodItem.Item_desc" class="control-label"></label>
                <input asp-for="FoodItem.Item_desc" class="form-control" />
                <span asp-validation-for="FoodItem.Item_desc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Available</label>
                <input asp-for="FoodItem.Available" type="checkbox" class="form-check-input" />
            </div>

            <div class="form-group">
                <label class="control-label">Vegetarian</label>
                <input asp-for="FoodItem.Vegetarian" type="checkbox" class="form-check-input" />
            </div>


            <div class="form-group">
                <label asp-for="FoodItem.Price" class="control-label"></label>
                <input asp-for="FoodItem.Price" class="form-control" />
                <span asp-validation-for="FoodItem.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
